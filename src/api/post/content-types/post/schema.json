{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "date"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "text"
    },
    "tags": {
      "type": "enumeration",
      "enum": [
        "photo",
        "video",
        "landscape",
        "portrait",
        "food"
      ]
    },
    "photo": {
      "type": "component",
      "repeatable": true,
      "component": "post.photoplus"
    },
    "thumbnail": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
